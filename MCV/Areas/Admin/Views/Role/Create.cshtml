@model MCV.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="row">
    <div class="col-md-9">
        <br></br>
        <h1>Create</h1>

        <h4>Role</h4>
