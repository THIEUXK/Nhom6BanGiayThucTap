<div class="row">
    <div class="main-header">
        <h4>Dashboard</h4>
    </div>
</div>
<!-- 4-blocks row start -->
<div class="row dashboard-header">
    <div class="col-lg-3 col-md-6">
        <div class="card dashboard-product">
            <span>Số Lượng Sản Phẩm Trong Kho</span>
            @if(thongkeslctsp!=null){
                <h2 class="dashboard-total-products">@thongkeslctsp</h2>
            }
            else{
                <h2 class="dashboard-total-products">0</h2>
            }
            
            <span class="label label-warning">Sales</span>Arriving Today
            <div class="side-box">
                <i class="ti-signal text-warning-color"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card dashboard-product">
            <span>Số Đơn Tháng Này</span>
            @if(thongkedoanhthutheothang!=null){
                 <h2 class="dashboard-total-products">@thongkesodontrongthang.SoDon</h2>
            }
            else{
                <h2 class="dashboard-total-products">0</h2>
            }
           
            <span class="label label-primary">Views</span>View Today
            <div class="side-box ">
                <i class="ti-gift text-primary-color"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card dashboard-product">
            <span>Số Lượng Sản Phẩm Đã Bán</span>
            @if(thongkeslspdaban!=null){
                <h2 class="dashboard-total-products"><span>@thongkeslspdaban.SoLuong</span></h2>
            }
            else{
                 <h2 class="dashboard-total-products"><span>0</span></h2>
            }
            <span class="label label-success">Sales</span>Reviews
            <div class="side-box">
                <i class="ti-direction-alt text-success-color"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card dashboard-product">
            <span>Doanh Thu Tháng Này</span>
            @if(thongkedttrongthang!=null){
                 <h2 class="dashboard-total-products"><span>@thongkedttrongthang.TongTien.ToString("n0") VND</span></h2>
            }
            else{
                 <h2 class="dashboard-total-products"><span> 0 VND</span></h2>
            }
           
            <span class="label label-danger">Sales</span>Reviews
            <div class="side-box">
                <i class="ti-rocket text-danger-color"></i>
            </div>
        </div>
    </div>
</div>
<!-- 4-blocks row end -->
<!-- 1-3-block row start -->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Doanh Thu Theo Ngày</h5>
            </div>
            <div class="card-block">
                <canvas id="columnChart" class="ct-chart-line " style="min-width: 250px; height: 330px; margin: 0 auto"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
         <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Doanh Thu Trong Các Tháng Gần Đây</h5>
            </div>
            <div class="card-block">
                <canvas id="piechart111" class="ct-chart-line "  style="min-width: 250px; height: 330px; margin: 0 auto"></canvas>
            </div>
        </div>
    </div>
   
</div>
<!-- 1-3-block row end -->
<!-- 2-1 block start -->
<div class="row">
    <div class="col-xl-8 col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="table-responsive">
                    <table class="table m-b-0 photo-table">
                        <thead>
                            <tr class="text-uppercase">
                                <th>STT</th>
                                <th>Tên Khách Hàng</th>
                                <th>Số Điện Thoại </th>
                                <th>Email</th>
                                <th> Tổng Số Tiền</th>
                                <th> Tổng Số Đơn</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in thongkekhmuanhieu){
                                <tr>
                                    <td>
                                        <strong style="color:black">@stt</strong>
                                    </td>

                                    <td>
                                        <strong style="color:black">@item.Ten</strong>
                                    </td>
                                    <td>
                                        <strong style="color:black">@item.SDT</strong>
                                    </td>
                                    <td>
                                        <strong style="color:black">@item.Email</strong>
                                    </td>
                                    <td>
                                        <strong style="color:red">@item.TongSoTien.ToString("n0") VND</strong>
                                    </td>
                                    <td>
                                        <strong style="color:green">@item.SoDonMua</strong>
                                    </td>
                                    @{
                                        stt ++;
                                    }
                                </tr>
                            }                                                     
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text">Tốp Sản Phẩm Bán Chạy</h5>
            </div>
            <div class="card-block">
                <canvas id="SanPhamBanChay" style="min-width: 150px; height: 230px; margin: 0 auto"></canvas>
            </div>
        </div>
    </div>
</div>
<!-- 2-1 block end -->
<script>
