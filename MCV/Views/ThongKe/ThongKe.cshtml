@using AppData.ViewModels.ThongKe

@{
    ViewData["Title"] = "ThongKe";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
    ThongKeSLSPDaBan thongkeslspdaban = ViewBag.ThongKeSLSPDaBan;
    ThongKeDTTrongThang thongkedttrongthang = ViewBag.ThongKeDTTrongThang;
    int thongkeslctsp = ViewBag.ThongKeSLCTSP;
    ThongKeSDonTrongThang thongkesodontrongthang = ViewBag.ThongKeSDonTrongThang;
    List<ThongKeKHMuaNhieu> thongkekhmuanhieu = ViewBag.ThongKeKHMuaNhieu;
    List<ThongKeDoanhThu> thongkedoanhthutheongay = ViewBag.ThongKeDoanhThuTheoNgay;
    List<ThongKeDoanhThu> thongkedoanhthutheothang = ViewBag.ThongKeDoanhThuTheoThang;
    List<ThongKeMSSanPhamTheoSoLuong> thongkesp = ViewBag.ThongKeMSSanPhamTheoSoLuong;

    int stt = 1;

}
