<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script>
    let labels = [];
    let data = [];
    const barColors = ["red", "green","blue","orange","brown","black","gray"];

    @foreach (var result in thongkedoanhthutheongay)
    {
        <text>labels.push('@result.Ngay-@result.SoHoaDon ');</text>
        <text>data.push('@result.DoanhThu');</text>
    }

    var ctx = document.getElementById('columnChart').getContext('2d');
    var columnChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Doanh Thu',
                data: data,
                backgroundColor: barColors
               
            }]
        },
        options: {
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Ngày -Tổng Số Đơn'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Doanh Thu'
                    },
                    ticks: {
                        beginAtZero: true
                    }
                }
            }
        }
    });


    let labels1 = [];
    let data1 = [];
    const barColors1 = ["red", "green","blue","orange","brown","black","gray"];

    @foreach (var result in thongkedoanhthutheothang)
    {
        <text>labels1.push('@result.Ngay-@result.SoHoaDon');</text>
        <text>data1.push('@result.DoanhThu');</text>
    }

    var ctx1 = document.getElementById('piechart111').getContext('2d');
    var columnChart1 = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: labels1,
            datasets: [{
                label: 'Doanh Thu',
                data: data1,
                backgroundColor: barColors1
               
            }]
        },
        options: {
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Tháng - Tổng Số Đơn'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Doanh Thu'
                    },
                    ticks: {
                        beginAtZero: true
                    }
                }
            }
        }
        
    });

     let labels2 = [];
    let data2 = [];
    const barColors2 = ["red", "green","blue","orange","brown","black","gray"];

    @foreach (var result in thongkesp)
    {
        <text>labels2.push('@result.TenSP.Trim()-@result.DoanhThu');</text>
        <text>data2.push('@result.SoLuong');</text>
    }
    new Chart("SanPhamBanChay", {
  type: "pie",
  data: {
    labels: labels2,
    datasets: [{
      backgroundColor: barColors2,
      data: data2
    }]
  },
  options: {
    title: {
      display: true,
      text: "Tốp 7 Sản Phẩm Bán Chạy Trong Tháng"
    },
    plugins: {
            legend: {
                labels: {
                    font: {
                        family: 'Arial', // Thay đổi font thành 'Arial', 'Times New Roman', 'Segoe UI', hoặc font hỗ trợ tiếng Việt khác
                        size: 14
                    }
                }
            }
        }
  }
});
</script>


  
  